<div class="row">
    <div class="col-md-6 m-auto">
        <div class="container mt-5 pl-5">

            <h2 class="text-center">Create new account for Admin</h2>
            <form action="/admin/signup" method="post">
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="adminname" placeholder="Enter Name" required>
                </div>

                <div class="form-group">
                    <label>Email address</label>
                    <input type="email" class="form-control" name="Email" placeholder="Enter email" required>
                </div>

                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password" placeholder="Password" required>
                </div>

                <a href="/admin/">Already have account ?</a>
                <button type="submit" class="btn btn-primary float-right">Signup</button>
            </form>
        </div>
    </div>
</div>