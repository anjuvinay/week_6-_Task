<section>
    <div class="container">
         <div class="row mt-4">
            <a href="/admin/add-product" class="btn btn-success ml-auto mb-5">Add Product</a>
        </div>
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th scope="col">Image</th>
    </tr>
  </thead>
  <tbody>

    {{#each items}}

    <tr>
      <th scope="row">{{@index}}</th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.description}}</td>
      <td>{{this.price}}</td>
      <td><img style="width: 50px; height: 50px;" src="{{this.image}}" alt=""></td>
    </tr>

    {{/each}}
   
  </tbody>
</table>
    </div>
</section>